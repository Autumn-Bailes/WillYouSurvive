<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Edit text theme. -->
    <style name="EditText" parent="AppTheme">
        <!--Customize theme here. -->
        <item name="android:shadowColor">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textColorLink">@color/colorAccent</item>
    </style>

    <!-- Question header box theme. -->
    <style name="Header" parent="AppTheme">
        <!--Customize theme here. -->
        <item name="android:padding">16dp</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/secondaryLight</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Question text box theme. -->
    <style name="Question" parent="AppTheme">
        <!--Customize theme here. -->
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/secondaryLight</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Radio Group theme. -->
    <style name="RadioGroup" parent="AppTheme">
        <!--Customize theme here. -->
        <item name="android:background">@color/secondaryLight</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Radio Button theme. -->
    <style name="RadioButton" parent="AppTheme">
        <!--Customize theme here. -->
        <item name="android:buttonTint" tools:ignore="NewApi" tools:targetApi="lollipop">
            @color/colorPrimaryLight
        </item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Checkbox theme. -->
    <style name="Checkbox" parent="AppTheme">
        <!--Customize theme here. -->
        <item name="android:background">@color/secondaryLight</item>
        <item name="android:buttonTint" tools:ignore="NewApi" tools:targetApi="lollipop">
            @color/colorPrimaryLight
        </item>
    </style>

</resources>

